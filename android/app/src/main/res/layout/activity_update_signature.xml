<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_242A37"
    android:orientation="vertical"
    tools:context=".my.UpdateSignatureActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/color_212632"
        app:cardCornerRadius="15dp">

        <EditText
            android:id="@+id/upsig_et_sig"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@null"
            android:maxLength="140"
            android:gravity="clip_horizontal"
            android:hint="填写个性签名更容易获得别人的关注哦"
            android:padding="15dp"
            android:textColor="@color/color_ffffff"
            android:textColorHint="@color/color_8391af" />

        <TextView
            android:id="@+id/upsig_tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:text="还可以输入140个字符"
            android:textColor="@color/color_ffffff" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/upsig_tv_submit"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_paled_rounded"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/color_ffffff" />

</LinearLayout>