<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_242A37">

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/item_msg_iv_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img_syst_com" />

        <TextView
            android:id="@+id/item_msg_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/shape_bg_badge"
            android:gravity="center"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_msg_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textColor="@color/color_ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_msg_tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:singleLine="true"
            android:text="暂时没有新评论"
            android:textColor="@color/color_ffffff"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_msg_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:text="2020年9月17日"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

</RelativeLayout>