<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_242A37"
    tools:context=".my.UpdateNicknameActivity">

    <com.example.jitter.widget.ClearableEditText
        android:layout_width="match_parent"
        tools:text="Allen2020"
        android:id="@+id/upnn_et_name"
        android:padding="15dp"
        android:maxLength="16"
        android:textColor="@color/color_ffffff"
        android:background="@color/color_212632"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="чбошод"
        android:id="@+id/upnn_tv_submit"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color_ffffff"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_paled_rounded"/>

</LinearLayout>