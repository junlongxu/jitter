<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_242A37">

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/item_follow_avator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:background="@mipmap/icon" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_follow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搞笑王"
            android:textColor="@color/color_ffffff" />

        <TextView
            android:id="@+id/item_follow_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textColor="@color/color_666e87"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_follow_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.2万"
            android:textColor="@color/color_909bb9"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_follow_action"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_paled_rounded"
        android:gravity="center"
        android:text="关注"
        android:textColor="@color/color_ffffff"
        android:textSize="13sp" />

</RelativeLayout>